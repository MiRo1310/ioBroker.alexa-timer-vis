    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/eslint-config": "^2.1.0",
    "@iobroker/testing": "^5.1.1",
    "@tsconfig/node18": "^18.2.4",
    "@types/mocha": "^10.0.10",
    "chai": "^4.4.1",
    "chai-as-promised": "^8.0.2",
    "mocha": "^11.7.1",
